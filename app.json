{
  "name": "saucerbot",
  "description": "Bot for the saucer groupme",
  "repository": "https://github.com/clarkperkins/saucerbot.git",
  "stack": "container",
  "scripts": {
    "postdeploy": "python manage.py migrate"
  },
  "env": {
    "DJANGO_SECRET_KEY": {
      "generator": "secret"
    },
    "GROUPME_CLIENT_ID": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    "bonsai",
    "heroku-postgresql"
  ]
}